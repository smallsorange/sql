函数	语法示例	功能说明	返回类型
CURRENT_DATE()	SELECT CURRENT_DATE();	返回当前日期（仅年月日）	DATE
CURRENT_TIMESTAMP() / NOW()	SELECT NOW();	返回当前日期和时间	DATETIME
CURDATE()	SELECT CURDATE();	返回当前日期（与 CURRENT_DATE() 相同）	DATE
CURTIME()	SELECT CURTIME();	返回当前时间	TIME

--DATE()	SELECT DATE('2025-11-04 12:34:56');	从时间戳中提取日期部分	DATE
--TIME()	SELECT TIME('2025-11-04 12:34:56');	从时间戳中提取时间部分	TIME
--YEAR()	SELECT YEAR('2025-11-04');	提取年份	INT
--MONTH()	SELECT MONTH('2025-11-04');	提取月份（1–12）	INT
--DAY() / DAYOFMONTH()	SELECT DAY('2025-11-04');	提取日（1–31）	INT
--HOUR() / MINUTE() / SECOND()	SELECT HOUR('2025-11-04 12:34:56');	提取时间中的小时/分钟/秒	INT

WEEK()	SELECT WEEK('2025-11-04');	提取一年中的周数（默认周一为第一天）	INT
WEEKDAY()	SELECT WEEKDAY('2025-11-04');	提取星期几（0=周一, 6=周日）	INT
QUARTER()	SELECT QUARTER('2025-11-04');	提取季度（1–4）	INT
LAST_DAY()	SELECT LAST_DAY('2025-11-04');	返回该日期所在月份的最后一天	DATE

--DATE_ADD()	SELECT DATE_ADD('2025-11-04', INTERVAL 7 DAY);	指定日期加上时间间隔	DATE
--DATE_SUB()	SELECT DATE_SUB('2025-11-04', INTERVAL 7 DAY);	指定日期减去时间间隔	DATE。  
    WHERE release_date BETWEEN DATE_SUB('2025-11-04', INTERVAL 7 DAY) AND '2025-11-04' 过去七天内
    WHERE release_date < DATE_SUB('2025-11-04', INTERVAL 7 DAY) 七天前 10.28的之前

--DATEDIFF()	SELECT DATEDIFF('2025-11-10', '2025-11-04');	计算两个日期相差的天数（前-后）	INT
--TIMESTAMPDIFF()	SELECT TIMESTAMPDIFF(HOUR, '2025-11-04 10:00', '2025-11-04 12:00');	按指定单位（SECOND/MINUTE/HOUR/DAY/MONTH/YEAR）计算差值	INT
--TIMESTAMPADD()	SELECT TIMESTAMPADD(MINUTE, 30, '2025-11-04 10:00');	给时间戳加上指定时间单位	DATETIME
STR_TO_DATE()	SELECT STR_TO_DATE('2025/11/04 12-30-00','%Y/%m/%d %H-%i-%s');	将字符串转换为日期	DATETIME
--DATE_FORMAT()	SELECT DATE_FORMAT('2025-11-04 12:34:56','%Y-%m');	日期格式化输出	STRING

EXTRACT()	SELECT EXTRACT(YEAR FROM '2025-11-04');	提取日期中的年	INT
select extract(DAY from '2025-11-04')
